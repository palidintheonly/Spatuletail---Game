# ========================================
# SPATULETAIL GAME - ENVIRONMENT CONFIG
# ========================================
# Copy this file to .env and configure your settings
# IMPORTANT: Never commit .env to version control!

# ----------------------------------------
# Server Configuration
# ----------------------------------------
PORT=3010
HOST=0.0.0.0
NODE_ENV=alpha-prebuild-canary

# ----------------------------------------
# Admin Panel
# ----------------------------------------
# CHANGE THIS PASSWORD!
ADMIN_PASSWORD=your_secure_password_here
# Admin session timeout in seconds (default: 1 hour)
ADMIN_SESSION_TIMEOUT_SECONDS=3600

# ----------------------------------------
# Security
# ----------------------------------------
# Generate a random secure key for production!
SESSION_SECRET=generate-a-random-secure-key-here
# Enable rate limiting to prevent abuse
ENABLE_RATE_LIMITING=true
# Max connections per IP address
MAX_CONNECTIONS_PER_IP=10

# Rate Limiting Configuration
# Time window in minutes for rate limiting
RATE_LIMIT_WINDOW_MINUTES=15
# Max requests per IP within the time window
RATE_LIMIT_MAX_REQUESTS=100
# Enable rate limit for Socket.IO connections
RATE_LIMIT_SOCKET_ENABLED=true
# Max Socket.IO connections per IP per minute
RATE_LIMIT_SOCKET_MAX_PER_MINUTE=5

# ----------------------------------------
# Game Configuration
# ----------------------------------------
# Number of rounds per game (1-10)
MAX_ROUNDS=3

# Turn timer in seconds (10-120)
TURN_TIMER_SECONDS=30

# Number of simulated bot players (0-100)
MAX_SIMULATED_PLAYERS=47

# Board size (always 10x10 for Battleship)
BOARD_SIZE=10

# Inactivity kick timer in seconds
INACTIVITY_THRESHOLD_SECONDS=45

# Warning threshold before kick in seconds
WARNING_THRESHOLD_SECONDS=30

# ----------------------------------------
# Matchmaking
# ----------------------------------------
# Enable spectator mode
ENABLE_SPECTATOR_MODE=true

# Maximum spectators in queue
MAX_SPECTATORS=50

# Auto-match timeout in seconds
MATCHMAKING_TIMEOUT_SECONDS=60

# ----------------------------------------
# AI/Bot Configuration
# ----------------------------------------
# Bot difficulty range (1=Easy, 4=Extreme)
BOT_MIN_DIFFICULTY=1
BOT_MAX_DIFFICULTY=4

# Bot response delay in seconds (min-max)
BOT_MIN_DELAY_SECONDS=1.5
BOT_MAX_DELAY_SECONDS=2.5

# ----------------------------------------
# Logging & Data Storage
# ----------------------------------------
# Maximum game logs to store
MAX_GAME_LOGS=2000

# Maximum event logs to store
MAX_EVENT_LOGS=2000

# Leaderboard max entries
MAX_LEADERBOARD_ENTRIES=100

# Enable console logging
ENABLE_CONSOLE_LOGGING=true

# Log level (info, warn, error, success, game, network, ai)
LOG_LEVEL=info

# ----------------------------------------
# Performance
# ----------------------------------------
# Stats update interval in seconds
STATS_UPDATE_INTERVAL_SECONDS=3

# System info update interval in seconds
SYSTEM_INFO_INTERVAL_SECONDS=5

# Player activity check interval in seconds
ACTIVITY_CHECK_INTERVAL_SECONDS=10

# ----------------------------------------
# Features
# ----------------------------------------
# Enable offline mode (play against AI)
ENABLE_OFFLINE_MODE=true

# Enable online mode (play against other players)
ENABLE_ONLINE_MODE=true

# Enable leaderboards
ENABLE_LEADERBOARDS=true

# Enable game statistics tracking
ENABLE_GAME_STATS=true

# ----------------------------------------
# API Configuration
# ----------------------------------------
# API version (e.g., v1, v2)
API_VERSION=v1

# API response footer (branding settings are kept private in your local .env)
API_FOOTER_ENABLED=true
